    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:paddingBottom="10dp"
        android:background="@drawable/login_image_background">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/mobilereg"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="+91"
            android:textColor="#B3B6B7"
            android:id="@+id/edit_startnumber"
            android:clickable="false"
            android:cursorVisible="false"
            android:gravity="center"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="none"
            android:textSize="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_height="wrap_content"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Mobile Number"
                android:id="@+id/ed_mobile"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:maxLength="10"
                android:textColor="#000"
                android:background="@color/white"
                android:textColorHint="#7F8C8D"
                android:padding="10dp"
                android:layout_marginRight="15dp"/>

    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="By logging in,you agree to our"
                android:textColor="#B3B6B7"
                android:gravity="center"
                android:textSize="14sp"

                android:fontFamily="@font/futura_heavy_font"
                app:fontFamily="@font/futura_heavy_font"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terms and Conditions &amp;"
                    android:id="@+id/terms_LOGIN"
                    android:textColor="#F1C40F"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/futura_heavy_font"
                    app:fontFamily="@font/futura_heavy_font"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Private Policy"
                    android:textColor="#F1C40F"
                    android:id="@+id/policy_LOGIN"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/futura_heavy_font"
                    app:fontFamily="@font/futura_heavy_font"/>


            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#F1C40F"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="20dp"/>

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="85dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:text="login"
        android:fontFamily="@font/futura_heavy_font"
        app:fontFamily="@font/futura_heavy_font"
        android:id="@+id/next_login"
        android:background="@mipmap/nextarrow"
        android:textColor="#fff"
        android:textSize="14sp"
      android:layout_alignParentBottom="true"
        android:layout_marginBottom="85dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#D7DBDD"
        android:text="Or Register Now"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/register_LOGIN"
        android:textSize="22dp"
        android:fontFamily="@font/futura_heavy_font"
        app:fontFamily="@font/futura_heavy_font"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"/>
</RelativeLayout>
