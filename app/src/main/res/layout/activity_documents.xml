<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@mipmap/documentbg">

    <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Documents"
       android:textColor="@color/blue"
        android:textStyle="bold"
       android:gravity="center"
       android:textSize="20sp"
        android:fontFamily="@font/futura_heavy_font"
        app:fontFamily="@font/futura_heavy_font"
        android:layout_marginTop="20dp"
        android:padding="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="80dp"
        android:padding="10dp"
        android:background="@drawable/document_field_background"
        android:id="@+id/ll_travels_DOC">


        <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@mipmap/travdoc"
            android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColorHint="@color/black"
                android:gravity="center"
                android:hint="Travel Document"
                android:background="@color/white"
                android:textCursorDrawable="@color/black"
                android:fontFamily="@font/futura_heavy_font"
                app:fontFamily="@font/futura_heavy_font"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="80dp"
        android:padding="10dp"
        android:background="@drawable/document_field_background"
        android:weightSum="2"
        android:id="@+id/ll_personal_DOC">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColorHint="@color/black"
            android:gravity="left"
            android:hint="Personal Document"
            android:background="@color/white"
            android:textCursorDrawable="@color/black"
            android:fontFamily="@font/futura_heavy_font"
            app:fontFamily="@font/futura_heavy_font"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:src="@mipmap/personaldoc"
            android:layout_weight=".5"/>

    </LinearLayout>

</LinearLayout>