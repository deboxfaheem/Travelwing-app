<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/invoice_fragment"
    android:orientation="vertical"
    android:background="@color/fragment_background_color">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/progress_bar_invoice"
        android:layout_centerInParent="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:visibility="visible"
            android:background="@drawable/allheaderimage"
            android:orientation="horizontal"
            android:layout_height="56dp"

            >


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".28"
                android:weightSum="1"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                    android:id="@+id/back_icon"
                    />


            </LinearLayout>


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="REFER AND EARN"
                android:textStyle="bold"
                android:paddingLeft="@dimen/form_padding_top"
                android:gravity="left|center"
                android:textColor="@color/darkgarycolor"
                android:textSize="@dimen/textsize_header2"
                android:layout_weight="1.5"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="540dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="7dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textColor="@color/Whitecolor"
                        android:background="@color/colorAccent"
                        android:text="Refer a friend"
                        android:fontFamily="@font/futura_heavy_font"
                        app:fontFamily="@font/futura_heavy_font"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/refer_field_background"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:gravity="left"
                            android:text="Referral Name"
                            android:textColor="#7F8C8D"
                            android:textSize="14sp"
                            android:layout_weight=".05"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:fontFamily="@font/futura_heavy_font"
                            app:fontFamily="@font/futura_heavy_font"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:gravity="left"
                            android:textSize="14dp"
                            android:id="@+id/name_REFER"
                            android:layout_weight="1.95"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:textColor="#7F8C8D"
                            android:fontFamily="@font/futura_heavy_font"
                            app:fontFamily="@font/futura_heavy_font"/>
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/refer_field_background">

                        <TextView
                            android:layout_width="wrap_content"
                            android:gravity="left"
                            android:text="Relation"
                            android:textColor="#7F8C8D"
                            android:textSize="14sp"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_weight=".4"
                            android:fontFamily="@font/futura_heavy_font"
                            app:fontFamily="@font/futura_heavy_font"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:gravity="left"
                            android:textSize="14dp"
                            android:id="@+id/relation_REFER"
                            android:layout_weight="1.6"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:textColor="#7F8C8D"
                            android:fontFamily="@font/futura_heavy_font"
                            app:fontFamily="@font/futura_heavy_font"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/refer_field_background">

                        <TextView
                            android:layout_width="wrap_content"
                            android:gravity="left"
                            android:text="Moblie No"
                            android:textColor="#7F8C8D"
                            android:textSize="14sp"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_weight=".3"
                            android:fontFamily="@font/futura_heavy_font"
                            app:fontFamily="@font/futura_heavy_font"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:gravity="left"
                            android:textSize="14dp"
                            android:maxLength="10"
                            android:inputType="number"
                            android:id="@+id/mobile_REFER"
                            android:layout_weight="1.9"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:textColor="#7F8C8D"
                            android:fontFamily="@font/futura_heavy_font"
                            app:fontFamily="@font/futura_heavy_font"/>
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/refer_field_background"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:gravity="left"
                            android:text="Email-Id (Optional)"
                            android:textColor="#7F8C8D"
                            android:textSize="14sp"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:fontFamily="@font/futura_heavy_font"
                            app:fontFamily="@font/futura_heavy_font"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:gravity="left"
                            android:textSize="14dp"
                            android:id="@+id/email_REFER"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:textColor="#7F8C8D"
                            android:fontFamily="@font/futura_heavy_font"
                            app:fontFamily="@font/futura_heavy_font"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/refer_field_background"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:gravity="left"
                            android:text="Profession"
                            android:textColor="#7F8C8D"
                            android:textSize="14sp"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_weight=".3"
                            android:fontFamily="@font/futura_heavy_font"
                            app:fontFamily="@font/futura_heavy_font"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:gravity="left"
                            android:textSize="14dp"
                            android:id="@+id/profession_REFER"
                            android:layout_weight="1.7"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:textColor="#7F8C8D"
                            android:fontFamily="@font/futura_heavy_font"
                            app:fontFamily="@font/futura_heavy_font"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/refer_field_background"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:gravity="left"
                            android:text="City"
                            android:textColor="#7F8C8D"
                            android:textSize="14sp"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_weight=".6"
                            android:fontFamily="@font/futura_heavy_font"
                            app:fontFamily="@font/futura_heavy_font"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:gravity="left"
                            android:textSize="14dp"
                            android:id="@+id/city_REFER"
                            android:layout_weight="1.4"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:textColor="#7F8C8D"
                            android:fontFamily="@font/futura_heavy_font"
                            app:fontFamily="@font/futura_heavy_font"/>
                    </LinearLayout>



                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="@dimen/dimen_40dp"
                        android:id="@+id/submit_REFER"
                        android:text="submit"
                        android:background="@drawable/login_btn_background"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>





    </LinearLayout>


</FrameLayout>


