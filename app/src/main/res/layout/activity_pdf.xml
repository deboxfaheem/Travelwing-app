<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@mipmap/travscreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/allheaderimage">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futura_heavy_font"
        app:fontFamily="@font/futura_heavy_font"
        android:textColor="@color/black"
        android:text="MY VOUCHER"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"/>
</LinearLayout>

    <!--<TextView
        android:id="@+id/url_EDT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="enter your url"
        android:textColor="#000000"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/tite_EDT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="enter your title"
        android:textColor="#000000"
        android:textSize="14sp" />-->



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">


        <Button
            android:id="@+id/submit_BTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Download voucher"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:background="@drawable/back_transparent"
            android:layout_weight="1"
            android:fontFamily="@font/futura_heavy_font"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/view_BTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="View Voucher"
            android:textColor="@android:color/black"
            android:fontFamily="@font/futura_heavy_font"
            android:background="@drawable/back_transparent"
            android:textAllCaps="false"
            android:textSize="12sp" />

    </LinearLayout>

    <com.github.barteksc.pdfviewer.PDFView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pdf_VIEWER"/>
</LinearLayout>