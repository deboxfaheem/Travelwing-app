<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="10dp"
    app:cardElevation="5dp"
    android:orientation="vertical"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:id="@+id/linear_history_items"
        android:weightSum="4">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:gravity="center|left"
            android:orientation="horizontal"
            android:weightSum="1">


            <TextView
                android:id="@+id/queryid"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left|center"
                android:text="gfsdgsdgfgdf"
                android:padding="5dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="11dp"
                android:background="@drawable/query_background"

                />


            <TextView
                android:id="@+id/date_query"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="12dp"
                android:gravity="right|center"
                android:text="gsdg"

                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:orientation="horizontal"
            android:weightSum="2">


            <TextView
                android:id="@+id/subject"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"

                android:fontFamily="sans-serif-medium"
                android:gravity="left|center"
                android:text="GERMANY"
                android:textColor="#B5000000"
                android:textAllCaps="true"
                android:textSize="12dp"

                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="3">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/pax_layout_margin"
                android:layout_weight="1"
                android:background="@drawable/pax_background"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/adult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="4"
                    android:gravity="bottom|center"
                    android:textColor="@color/color_pax"
                    android:textSize="@dimen/number_of_pax_textview"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adults"
                    android:textColor="@color/color_pax"
                    android:textSize="12dp"
                    android:textStyle="normal" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/pax_layout_margin"
                android:layout_weight="1"
                android:background="@drawable/pax_background"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/childs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="4"
                    android:gravity="bottom|center"
                    android:textColor="@color/color_pax"
                    android:textSize="@dimen/number_of_pax_textview"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Children"
                    android:textColor="@color/color_pax"
                    android:textSize="12dp"
                    android:textStyle="normal" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/pax_layout_margin"
                android:layout_weight="1"
                android:background="@drawable/pax_background"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/infants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="4"
                    android:gravity="bottom|center"
                    android:textColor="@color/color_pax"
                    android:textSize="@dimen/number_of_pax_textview"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Infants"
                    android:textColor="@color/color_pax"
                    android:textSize="12dp"
                    android:textStyle="normal" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>